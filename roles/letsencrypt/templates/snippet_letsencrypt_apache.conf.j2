# declare the challenges directory for Let's Encrypt servers
# To include in a virtual host on port 80

Alias /.well-known/acme-challenge  {{ letsencrypt_lib_dir }}/challenges

<Directory {{ letsencrypt_lib_dir }}/challenges>
    Options -Indexes +FollowSymLinks
    AllowOverride All
    Order allow,deny
    allow from all
    Require all granted
</Directory>
